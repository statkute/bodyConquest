<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.sonatype.oss</groupId>
        <artifactId>oss-parent</artifactId>
        <version>7</version>
    </parent>
    <groupId>com.googlecode.soundlibs</groupId>
    <artifactId>soundlibs</artifactId>
    <version>1.1</version>
    <packaging>pom</packaging>
    
    <name>soundlibs: Open source java libraries repackaged</name>

    <description>Soundlibs provides mavenized version of java sound libraries as
        Tritonus or JLayer
    </description>
    
    <url>https://code.google.com/p/soundlibs/</url>
    <licenses>
        <license>
            <name>LGPL 2.1 license</name>
            <url>http://www.opensource.org/licenses/lgpl-2.1.php</url>
        </license>
    </licenses>
    <developers>
        <developer>
            <name>Patrik Dudit≈°</name>
            <email>soundlibs@dudits.net</email>
            <url>http://pato.dudits.net/</url>
            <roles>
                <role>Packager</role>
            </roles>
        </developer>
    </developers>
    <scm>
        <connection>scm:hg:https://code.google.com/p/soundlibs</connection>
        <developerConnection>scm:hg:https://code.google.com/p/soundlibs</developerConnection>
        <url>https://code.google.com/p/soundlibs/</url>
      <tag>soundlibs-1.1</tag>
  </scm>    
    
    <modules>
        <module>tritonus-share</module>
        <module>jlayer</module>
        <module>mp3spi</module>
        <module>jorbis</module>
        <!-- VorbisSPI does not build as it depends on ancient tritonus-share -->
        <!--module>vorbisspi</module-->
    </modules>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>2.3.2</version>
                </plugin>
                <plugin>
                    <artifactId>maven-source-plugin</artifactId>
                    <version>2.1.2</version>
                </plugin>
                <plugin>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <version>2.8.1</version>
                    <configuration>
                        <links>
                            <link>http://wiki.soundlibs.googlecode.com/hg/tritonus-share/apidocs</link>
                            <link>http://wiki.soundlibs.googlecode.com/hg/jlayer/apidocs</link>
                            <link>http://wiki.soundlibs.googlecode.com/hg/mp3spi/apidocs</link>
                            <link>http://wiki.soundlibs.googlecode.com/hg/jorbis/apidocs</link>
                        </links>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <pushChanges>false</pushChanges>
                </configuration>                       
            </plugin>
            
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>release-profile</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-gpg-plugin</artifactId>
                        <version>1.4</version>
                        <executions>
                            <execution>
                                <id>sign-artifacts</id>
                                <phase>verify</phase>
                                <goals>
                                    <goal>sign</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>            
                </plugins>
            </build>
        </profile>
    </profiles>
</project>